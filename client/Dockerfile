# --- build stage ---
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
ENV VITE_API_BASE=/api
COPY . .
RUN VITE_API_BASE=$VITE_API_BASE npm run build
# --- serve stage ---
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
